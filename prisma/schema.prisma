generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  usn      String @id @default(cuid()) @map("_id")
  email    String @unique
  pass     String
  tasks    Task[]
  trackers Tracker[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  task_id    String    @id @default(cuid()) @map("_id")
  task_name  String
  due_date   DateTime
  status     String    @default("pending")
  completed  Boolean   @default(false)
  userId     String
  user       User      @relation(fields: [userId], references: [usn])
  trackers   Tracker[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Tracker {
  tracker_id   String @id @default(cuid()) @map("_id")
  tracker_type String
  duration     Int
  date         DateTime @default(now())
  userId       String
  user         User   @relation(fields: [userId], references: [usn])
  taskId       String?
  task         Task?  @relation(fields: [taskId], references: [task_id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([taskId])
}
